<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="请将还款转账打入以下账户"
        android:textColor="#4A4A4A"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="关闭"
        android:padding="12dp"
        android:src="@drawable/guabi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vTopBorder"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:background="#E3EDF7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vTitle" />

    <View
        android:id="@+id/vLeftBorder"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#E3EDF7"
        app:layout_constraintBottom_toTopOf="@+id/vBottomBorder"
        app:layout_constraintLeft_toLeftOf="@+id/vTopBorder"
        app:layout_constraintTop_toBottomOf="@+id/vTopBorder" />

    <View
        android:id="@+id/vRightBorder"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#E3EDF7"
        app:layout_constraintBottom_toTopOf="@+id/vBottomBorder"
        app:layout_constraintRight_toRightOf="@+id/vTopBorder"
        app:layout_constraintTop_toBottomOf="@+id/vTopBorder" />

    <View
        android:id="@+id/vBottomBorder"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E3EDF7"
        app:layout_constraintBottom_toBottomOf="@+id/vTableBottomGuideline"
        app:layout_constraintLeft_toLeftOf="@+id/vTopBorder"
        app:layout_constraintRight_toRightOf="@+id/vTopBorder" />

    <View
        android:id="@+id/vTitleBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F7FCFF"
        app:layout_constraintBottom_toTopOf="@+id/vBottomBorder"
        app:layout_constraintLeft_toLeftOf="@+id/vAccountNameTitle"
        app:layout_constraintRight_toRightOf="@+id/vAccountNameTitle"
        app:layout_constraintTop_toTopOf="@+id/vAccountNameTitle" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#E3EDF7"
        app:layout_constraintBottom_toBottomOf="@+id/vTitleBackground"
        app:layout_constraintLeft_toRightOf="@+id/vTitleBackground"
        app:layout_constraintTop_toTopOf="@+id/vTitleBackground" />

    <TextView
        android:id="@+id/vAccountNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="户名"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/vLeftBorder"
        app:layout_constraintTop_toBottomOf="@+id/vTopBorder" />

    <TextView
        android:id="@+id/vAccountName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="重庆伟仕小额贷款有限公司"
        app:layout_constraintBottom_toBottomOf="@+id/vAccountNameTitle"
        app:layout_constraintLeft_toRightOf="@+id/vAccountNameTitle"
        app:layout_constraintRight_toRightOf="@+id/vRightBorder"
        app:layout_constraintTop_toTopOf="@+id/vAccountNameTitle" />

    <View
        android:id="@+id/vBorderBelowAccountName"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E3EDF7"
        app:layout_constraintLeft_toLeftOf="@+id/vTitleBackground"
        app:layout_constraintRight_toLeftOf="@+id/vRightBorder"
        app:layout_constraintTop_toBottomOf="@+id/vAccountNameTitle" />

    <TextView
        android:id="@+id/vAccountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="帐号"
        app:layout_constraintLeft_toLeftOf="@+id/vTitleBackground"
        app:layout_constraintRight_toRightOf="@+id/vAccountNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/vAccountNameTitle" />

    <TextView
        android:id="@+id/vAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="310501010400 28354"
        app:layout_constraintBottom_toBottomOf="@+id/vAccountTitle"
        app:layout_constraintLeft_toLeftOf="@+id/vAccountName"
        app:layout_constraintTop_toTopOf="@+id/vAccountTitle" />

    <View
        android:id="@+id/vBorderBelowAccount"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E3EDF7"
        app:layout_constraintLeft_toLeftOf="@+id/vTitleBackground"
        app:layout_constraintRight_toLeftOf="@+id/vRightBorder"
        app:layout_constraintTop_toBottomOf="@+id/vAccountTitle" />

    <TextView
        android:id="@+id/vDepositBankTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="开户银行"
        app:layout_constraintLeft_toLeftOf="@+id/vTitleBackground"
        app:layout_constraintRight_toRightOf="@+id/vAccountNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/vAccountTitle" />

    <TextView
        android:id="@+id/vDepositBank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="3dp"
        android:text="中国农业银行重庆市江北支行营业部"
        app:layout_constraintBottom_toBottomOf="@+id/vDepositBankTitle"
        app:layout_constraintLeft_toLeftOf="@+id/vAccountName"
        app:layout_constraintRight_toLeftOf="@+id/vRightBorder"
        app:layout_constraintTop_toTopOf="@+id/vDepositBankTitle" />

    <Space
        android:id="@+id/vTableBottomGuideline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/vDepositBankTitle" />

    <Button
        android:id="@+id/vISee"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_corner_primary"
        android:text="知道了"
        android:textAlignment="center"
        android:textColor="@color/textPrimary"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vBottomBorder" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vISee" />
</android.support.constraint.ConstraintLayout>