<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="25dp">

    <ImageView
        android:id="@+id/btn_cancel_dv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/guabi" />

    <LinearLayout
        android:id="@+id/llyt_phone_dv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_cancel_dv"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已验证手机手机号："
            android:textColor="@color/color_4A4A4A"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="158****9073"
            android:textColor="@color/color_162751"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_verify_dv"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/llyt_phone_dv"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_gray"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_verify_code_dv"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                android:id="@+id/iv_verify_code_dv"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_refresh_dv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新"
                android:textColor="@color/color_5C8CFF"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_5C8CFF" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_tip_dv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llyt_verify_dv"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="3dp"
        android:text="请输入图形码！"
        android:textColor="@color/color_FF4608"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/llyt_phone_code_dv"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/tv_error_tip_dv"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phone_code_dv"
            style="@style/EditStyle1"
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_gray" />

        <TextView
            android:id="@+id/btn_get_code_dv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/border_gray_bg"
            android:paddingBottom="11dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="11dp"
            android:text="获取验证码"
            android:textColor="@color/textColorHint" />
    </LinearLayout>

    <com.vstecs.xiaodai.common.SolidButton
        android:id="@+id/btn_comfirm_dv"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/llyt_phone_code_dv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="确认" />
</RelativeLayout>